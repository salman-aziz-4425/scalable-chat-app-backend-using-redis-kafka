{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "app",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.app.json"
  },
  "monorepo": true,
  "root": "app",
  "projects": {
    "apps": {
      "type": "application",
      "root": "app",
      "sourceRoot": "app/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json"
      }
    }
  }
}
